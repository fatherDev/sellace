{% extends "base.twig" %}

{% block content %}
	{% for section in post.meta('flexible_sections') %}

		{% set type = section.acf_fc_layout %}

		{% if type == "right_img" %}
			{% include '/src/templates/organisms/text-block-left.twig' %}
		{% endif %}

		{% if type == "left_img" %}
			{% include '/src/templates/organisms/text-block-right.twig' %}
		{% endif %}

		{% if type == "numbers_section" %}
			{% include '/src/templates/organisms/numbers-section.twig' %}
		{% endif %}

		{% if type == "icon_box_section" %}
			{% include '/src/templates/organisms/icon-box-section.twig' %}
		{% endif %}

		{% if type == "articles_section" %}
			{% include '/src/templates/organisms/articles.twig' %}
		{% endif %}

	{% endfor %}
{% endblock %}
