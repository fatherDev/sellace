<section class="l-text-block-left">
	<div class="l-inner l-text-block-left__inner">
		<div class="l-text-block-left__col">
			<h1 class="l-text-block-left__title">{{ section.title }}</h1>
			<p class="l-text-block-left__desc">{{ section.desc }}</p>
			<div class="l-text-block-left__btn-wrapper">
				{% if section.button %}
					{% include '/src/templates/atoms/btn.twig' with {
					additionalClass: 'c-btn--primary',
					text: section.button.title
				} %}
				{% endif %}
				{% if section.phone %}
					<a href="tel:{{ section.phone }}" class="l-text-block-left__btn">{{ section.phone }}</a>
				{% endif %}

			</div>
		</div>
		<div class="l-text-block-left__col">
			{% include '/src/templates/atoms/img.twig' with {
				additionalClass: 'l-text-block-left__img',
				img: section.img
			} %}
		</div>
	</div>
</section>
